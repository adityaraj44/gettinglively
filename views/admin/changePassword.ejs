<div
  class="
    uk-section uk-section-muted uk-section-create-uk-section-large
    borderBottom
  "
>
  <div class="uk-container">
    <div
      class="
        uk-child-width-1-1
        uk-grid-small
        uk-grid-match
        uk-margin-large-top
        uk-margin-large-bottom
      "
      uk-grid
    >
      <div>
        <div class="uk-card uk-card-custom uk-card-hover uk-card-default">
          <div class="uk-card-header">
            <h3 class="uk-card-title uk-text-center">Change Password</h3>
          </div>
          <div class="uk-card-body">
            <form
              action="/admin/changepassword/<%- user._id %>"
              method="POST"
              enctype="multipart/form-data"
            >
              <div class="uk-form-stacked">
                <div class="uk-margin-small">
                  <div class="uk-form-control">
                    <input
                      required
                      class="uk-input uk-form-large noSelect"
                      type="password"
                      name="passwordold"
                      id="password"
                      placeholder="Current Password"
                    />
                  </div>
                  <div class="uk-form-control uk-margin-small-top">
                    <input
                      required
                      class="uk-input uk-form-large noSelect"
                      type="password"
                      name="passwordnew"
                      id="password"
                      placeholder="New Password"
                    />
                  </div>
                </div>
                <%- include('../partials/errors.ejs'); %>
                <div class="uk-marign-medium uk-text-center">
                  <div class="uk-form-control">
                    <button
                      type="submit"
                      class="uk-button uk-button-custom noSelect"
                    >
                      Update
                    </button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

