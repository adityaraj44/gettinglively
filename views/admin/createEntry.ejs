<%- include('../partials/adminNavbar.ejs'); %>

<ul class="uk-breadcrumb uk-margin-large-left">
  <li>
    <a href="/admin" class="uk-button uk-button-text noSelect"
      >Back to dashboard</a
    >
  </li>
  <li>
    <a href="/admincreate" class="uk-button uk-button-text noSelect"
      >Create Email Updates</a
    >
  </li>
  <li>
    <a href="/admincreate/entry" class="uk-button uk-button-text noSelect"
      >Create New Entry</a
    >
  </li>
  <li>
    <a href="/admincreate/allentries" class="uk-button uk-button-text noSelect"
      >All Entries</a
    >
  </li>
  <li>
    <a
      href="/admincreate/reviewentries"
      class="uk-button uk-button-text noSelect"
      >Review Entries</a
    >
  </li>
</ul>

<div
  class="
    uk-section uk-section-muted uk-section-create-uk-section-large
    borderBottom
  "
>
  <div class="uk-container">
    <div
      class="
        uk-child-width-1-1
        uk-grid-small
        uk-grid-match
        uk-margin-large-top
        uk-margin-large-bottom
      "
      uk-grid
    >
      <div>
        <div
          class="
            uk-child-width-1-1
            uk-grid-small
            uk-grid-match
            uk-margin-large-top
            uk-margin-large-bottom
          "
          uk-grid
        >
          <!-- post creation -->
          <div>
            <div class="uk-card uk-card-hover uk-card-default">
              <div class="uk-card-header">
                <h3 class="uk-card-title uk-text-center">Create New Entry</h3>
                <p
                  class="
                    uk-text-primary
                    uk-text-center
                    uk-padding-medium
                    uk-text-break
                  "
                >
                  New location creation
                </p>
              </div>
              <div class="uk-card-body">
                <form action="/admincreate/entry" method="POST">
                  <div class="uk-form-stacked">
                    <div class="uk-margin-small">
                      <div class="uk-form-control">
                        <input
                          required
                          type="text"
                          name="name"
                          id="name"
                          placeholder="Name of the place"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof name != 'undefined' ? name: '' %>"
                        />
                      </div>
                      <div class="uk-form-control uk-margin-small-top">
                        <label for="typeOfPlace" class="uk-text-meta"
                          >Type of place (restaurant,bar,club,pub or
                          venue)</label
                        >
                        <select
                          name="typeOfPlace"
                          id="typeOfPlace"
                          class="uk-select"
                          required
                        >
                          <option value="restaurant">Restaurant</option>
                          <option value="bar">Bar</option>
                          <option value="club">Club</option>
                          <option value="pub">Pub</option>
                          <option value="venue">Venue</option>
                        </select>
                      </div>
                      <div class="uk-form-control uk-margin-small-top">
                        <label for="bookingStatus" class="uk-text-meta"
                          >Booking Status</label
                        >
                        <select
                          name="bookingStatus"
                          id="bookingStatus"
                          class="uk-select"
                          required
                        >
                          <option value="Not taking bookings">
                            Not taking bookings
                          </option>
                          <option value="Taking bookings">
                            Taking bookings
                          </option>
                        </select>
                      </div>
                      <div class="uk-form-control">
                        <input
                          required
                          type="text"
                          name="typeOfVenue"
                          id="typeOfVenue"
                          placeholder="Type of Venue (use commas for multiple)"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof typeOfVenue != 'undefined' ? typeOfVenue: '' %>"
                        />
                      </div>
                      <div class="uk-form-control">
                        <input
                          required
                          type="text"
                          name="location"
                          id="location"
                          placeholder="Complete Address"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof location != 'undefined' ? location: '' %>"
                        />
                      </div>
                      <div class="uk-form-control">
                        <input
                          required
                          type="number"
                          name="rating"
                          min="1"
                          max="5"
                          placeholder="Initial rating out of 5"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof rating != 'undefined' ? rating: '' %>"
                        />
                      </div>
                      <div class="uk-form-control uk-margin-small-top">
                        <label for="desc" class="uk-text-meta"
                          >Full Description of the place. Description should not
                          be less than 500 characters.</label
                        >
                        <textarea
                          required
                          name="desc"
                          id="desc"
                          class="uk-textarea"
                        >
<%- typeof desc != 'undefined' ? desc: '' %></textarea
                        >
                      </div>
                    </div>
                    <%- include('../partials/errors.ejs'); %>
                    <div class="uk-marign-medium uk-text-center">
                      <div class="uk-form-control">
                        <button
                          type="submit"
                          class="uk-button uk-button-custom noSelect"
                        >
                          Post
                        </button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
              <div class="uk-card-footer"></div>
            </div>
          </div>
        </div>
      </div>
      <!-- post creation -->
    </div>
  </div>
</div>
