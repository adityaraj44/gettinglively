<%- include('../partials/adminNavbar.ejs'); %>

<ul class="uk-breadcrumb uk-margin-large-left">
  <li>
    <a href="/admin/customers" class="active uk-button uk-button-text noSelect"
      >Customers</a
    >
  </li>
  <li>
    <a href="/admin/business" class="active uk-button uk-button-text noSelect"
      >Business Members</a
    >
  </li>
  <li>
    <a href="/admincreate" class="active uk-button uk-button-text noSelect"
      >Create</a
    >
  </li>
  <li>
    <a
      href="/users/logout"
      class="uk-button active uk-button-text noSelect"
      uk-toggle="target: #userslogout"
      ><span class="noSelect"></span>Logout</a
    >
  </li>
</ul>

<div
  class="
    uk-section uk-section-muted uk-section-statistics uk-section-large
    borderBottom
  "
>
  <div class="uk-container">
    <h4 class="uk-text-uppercase uk-text-center uk-margin-top-large tagline1">
      Admin Dashboard
    </h4>
    <hr class="uk-divider-icon" />
    <div
      class="
        uk-child-width-1-1
        uk-child-width-1-4@s
        uk-grid-small
        uk-grid-match
        uk-margin-large-top
        uk-margin-large-bottom
      "
      uk-grid
    >
      <div class="tagline1">
        <div
          class="
            uk-card uk-card-hover uk-card-default uk-card-admin uk-card-body
          "
        >
          <h3 class="uk-card-title uk-text-center uk-margin-medium">
            Customers Joined
          </h3>
          <hr />
          <p
            class="uk-text-large uk-text-center uk-text-primary uk-text-medium"
          >
            <%- customerMembers.length %>
          </p>
        </div>
      </div>
      <div class="tagline2">
        <div
          class="
            uk-card uk-card-hover uk-card-admin uk-card-default uk-card-body
          "
        >
          <h3 class="uk-card-title uk-text-center uk-margin-medium">
            Memberships
          </h3>
          <hr />
          <p
            class="uk-text-large uk-text-center uk-text-primary uk-text-medium"
          >
            <%- businessMembers.length %>
          </p>
        </div>
      </div>
      <div class="tagline2">
        <div
          class="
            uk-card uk-card-hover uk-card-admin uk-card-default uk-card-body
          "
        >
          <h3 class="uk-card-title uk-text-center uk-margin-medium">
            Total Transactions
          </h3>
          <hr />
          <p
            class="uk-text-large uk-text-center uk-text-primary uk-text-medium"
          >
            <%- transaction.length %>
          </p>
        </div>
      </div>
      <div class="tagline3">
        <div
          class="
            uk-card uk-card-hover uk-card-admin uk-card-default uk-card-body
          "
        >
          <h3 class="uk-card-title uk-text-center uk-margin-medium">
            Total Entries
          </h3>
          <hr />
          <p
            class="uk-text-large uk-text-center uk-text-primary uk-text-medium"
          >
            <%- entries.length %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
