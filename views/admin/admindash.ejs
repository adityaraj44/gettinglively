<div
  class="
    uk-section uk-section-muted uk-section-statistics uk-section-large
    borderBottom
  "
>
  <div class="uk-container">
    <h4 class="uk-text-uppercase uk-text-center uk-margin-top-large tagline1">
      Admin Dashboard
    </h4>
    <hr class="uk-divider-icon" />
    <div
      class="
        uk-child-width-1-1
        uk-child-width-1-2@s
        uk-grid-small
        uk-grid-match
        uk-margin-large-top
        uk-margin-large-bottom
      "
      uk-grid
    >
      <div class="tagline1">
        <div
          class="
            uk-card uk-card-hover uk-card-secondary uk-card-admin uk-card-body
          "
        >
          <h3 class="uk-card-title uk-text-center uk-margin-medium">
            Customers Joined
          </h3>
          <hr />
          <p
            class="uk-text-large uk-text-center uk-text-primary uk-text-medium"
          >
            <%- customerMembers.length %>
          </p>
        </div>
      </div>
      <div class="tagline2">
        <div
          class="
            uk-card uk-card-hover uk-card-admin uk-card-secondary uk-card-body
          "
        >
          <h3 class="uk-card-title uk-text-center uk-margin-medium">
            Memberships
          </h3>
          <hr />
          <p
            class="uk-text-large uk-text-center uk-text-primary uk-text-medium"
          >
            <%- businessMembers.length %>
          </p>
        </div>
      </div>
      <div class="tagline2">
        <div
          class="
            uk-card uk-card-hover uk-card-admin uk-card-secondary uk-card-body
          "
        >
          <h3 class="uk-card-title uk-text-center uk-margin-medium">
            Total Transactions
          </h3>
          <hr />
          <p
            class="uk-text-large uk-text-center uk-text-primary uk-text-medium"
          >
            <%-
            transaction.length+transaction2.length+offerTransaction.length+planTransaction.length+planTransaction2.length+planTransaction3.length
            %>
          </p>
        </div>
      </div>
      <div class="tagline3">
        <div
          class="
            uk-card uk-card-hover uk-card-admin uk-card-secondary uk-card-body
          "
        >
          <h3 class="uk-card-title uk-text-center uk-margin-medium">
            Total Entries
          </h3>
          <hr />
          <p
            class="uk-text-large uk-text-center uk-text-primary uk-text-medium"
          >
            <%- entries.length %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

