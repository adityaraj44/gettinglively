<%- include('../partials/adminNavbar.ejs'); %>

<ul class="uk-breadcrumb uk-margin-large-left">
  <li>
    <a href="/admin" class="uk-button uk-button-text noSelect"
      >Back to dashboard</a
    >
  </li>
  <li>
    <a href="/admincreate" class="uk-button uk-button-text noSelect"
      >Create Email Updates</a
    >
  </li>
  <li>
    <a href="/admincreate/entry" class="uk-button uk-button-text noSelect"
      >Create New Entry</a
    >
  </li>
  <li>
    <a href="/admincreate/allentries" class="uk-button uk-button-text noSelect"
      >All Entries</a
    >
  </li>
  <li>
    <a
      href="/admincreate/reviewEntries"
      class="uk-button uk-button-text noSelect"
      >Review Entries</a
    >
  </li>
  <li>
    <a href="/admincreate/myentries" class="uk-button uk-button-text noSelect"
      >My Entries</a
    >
  </li>
</ul>

<div
  class="
    uk-section uk-section-muted uk-section-statistics uk-section-large
    borderBottom
  "
>
  <div class="uk-container">
    <h4 class="uk-text-uppercase uk-text-center uk-margin-top-large tagline1">
      All Entries
    </h4>
    <hr class="uk-divider-icon" />
    <div
      class="
        uk-child-width-1-1
        uk-child-width-1-3@s
        uk-grid-small
        uk-margin-large-top
        uk-margin-large-bottom
      "
      uk-grid
    >
      <% if(allEntries.length > 0) { %> <% allEntries.forEach((allEntry)=> { %>
      <div>
        <a
          href="/admincreate/myentries/entry/<%- allEntry._id %>"
          class="noSelect"
          ><div class="uk-card uk-card-hover uk-card-default">
            <div class="uk-card-media-top">
              <div class="uk-clearfix uk-position-absolute">
                <span
                  class="
                    uk-label
                    uk-float-left
                    uk-label-danger
                    uk-text-medium
                    uk-text-bold
                  "
                  ><%- allEntry.typeOfPlace %></span
                >
                <span
                  class="
                    uk-label
                    uk-float-left
                    uk-label-primary
                    uk-text-medium
                    uk-text-bold
                  "
                  ><%- allEntry.bookingStatus %></span
                >
                <!-- <span
                  class="
                    uk-label
                    uk-float-right
                    uk-label-success
                    uk-text-medium
                    uk-text-bold
                  "
                  ><%- reviews.length > 0 ? "User Reviews" + "-" +
                  reviews.length:'No reviews yet' %></span
                > -->
              </div>
              <img src="<%- allEntry.image %>" alt="<%- allEntry.image %>" />
            </div></div
        ></a>
      </div>
      <% }) %> <% } else { %>
      <p class="uk-text-center uk-text-large uk-text-warning">No Entries</p>
      <% } %>
    </div>
  </div>
</div>
