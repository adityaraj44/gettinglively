<%- include('./partials/navbar.ejs'); %>

<!-- search -->
<div
  class="
    uk-section
    uk-section-large
    uk-section-black
    uk-section-auto
    uk-search-section
    uk-light
  "
>
  <div class="uk-container search-container">
    <h4
      class="
        uk-text-uppercase uk-text-center uk-margin-top-large
        searchheading
        tagline1
      "
    >
      Search For
    </h4>
    <p class="uk-text-center uk-text-large uk-margin-medium-top tagline2">
      1000s Of Restaurants, Bars, Clubs, Pubs and Venues
    </p>
    <hr class="uk-divider-icon" />
    <div class="uk-container uk-flex uk-flex-center uk-margin-large tagline4">
      <a
        class="uk-navbar-toggle uk-button-text uk-text-large"
        href="#modal-full"
        uk-icon="icon: search; ratio:3"
        uk-toggle
      >
        <span class="uk-margin-medium-right search">Search</span></a
      >
    </div>
  </div>
</div>
<!-- modal -->
<div id="modal-full" class="uk-modal-full uk-modal" uk-modal>
  <div
    class="uk-modal-dialog uk-flex uk-flex-center uk-flex-middle"
    uk-height-viewport
  >
    <button
      class="uk-modal-close-full noSelect"
      type="button"
      uk-close
    ></button>
    <form class="uk-search uk-search-large">
      <input
        class="uk-search-input noSelect uk-input-large uk-text-center"
        type="search"
        placeholder="All of Manchester"
        autofocus
      />
    </form>
  </div>
</div>

<div class="uk-section-black uk-section-auto parallaxslider">
  <div
    class="uk-position-relative uk-visible-toggle uk-light"
    tabindex="-1"
    uk-slideshow="animation: push"
  >
    <ul class="uk-slideshow-items">
      <li>
        <img src="/img/header.jpeg" alt="" uk-cover />
        <div class="uk-position-center uk-position-small uk-text-center">
          <h2 uk-slideshow-parallax="y: -50,0,0; opacity: 1,1,0">
            GETTING LIVELY
          </h2>
          <p
            class="uk-text-large"
            uk-slideshow-parallax="y: 50,0,0; opacity: 1,1,0"
          >
            For bars, pubs, restaurants, nightclubs, venues this is the place to
            be
          </p>
        </div>
      </li>
      <li>
        <img src="/img/restaurant.jpeg" alt="" uk-cover />
        <div class="uk-position-center uk-position-small uk-text-center">
          <h2 uk-slideshow-parallax="y: -50,0,0; opacity: 1,1,0">
            Restaurants
          </h2>
          <p uk-slideshow-parallax="y: 50,0,0; opacity: 1,1,0">
            Good Friends, Good Food, Good Times
          </p>
        </div>
      </li>
      <li>
        <img src="/img/club.jpeg" alt="" uk-cover />
        <div class="uk-position-center uk-position-small uk-text-center">
          <h2 uk-slideshow-parallax="y: -50,0,0; opacity: 1,1,0">Clubs</h2>
          <p uk-slideshow-parallax="y: 50,0,0; opacity: 1,1,0">
            Live for today, plan for tomorrow, party tonight, party tonight
          </p>
        </div>
      </li>
      <li>
        <img src="/img/bar.jpeg" alt="" uk-cover />
        <div class="uk-position-center uk-position-small uk-text-center">
          <h2 uk-slideshow-parallax="y: -50,0,0; opacity: 1,1,0">Bars</h2>
          <p uk-slideshow-parallax="y: 50,0,0; opacity: 1,1,0">
            Let's rum away
          </p>
        </div>
      </li>
      <li>
        <img src="/img/pub.jpeg" alt="" uk-cover />
        <div class="uk-position-center uk-position-small uk-text-center">
          <h2 uk-slideshow-parallax="y: -50,0,0; opacity: 1,1,0">Pubs</h2>
          <p uk-slideshow-parallax="y: 50,0,0; opacity: 1,1,0">
            Drink Happy Thoughts
          </p>
        </div>
      </li>
      <li>
        <img src="/img/venue.jpeg" alt="" uk-cover />
        <div class="uk-position-center uk-position-small uk-text-center">
          <h2 uk-slideshow-parallax="y: -50,0,0; opacity: 1,1,0">Venues</h2>
          <p uk-slideshow-parallax="y: 50,0,0; opacity: 1,1,0">
            It's a very special venue and a very special occasion
          </p>
        </div>
      </li>
    </ul>

    <a
      class="uk-position-center-left uk-position-small uk-hidden-hover"
      href="#"
      uk-slidenav-previous
      uk-slideshow-item="previous"
    ></a>
    <a
      class="uk-position-center-right uk-position-small uk-hidden-hover"
      href="#"
      uk-slidenav-next
      uk-slideshow-item="next"
    ></a>
  </div>
</div>

