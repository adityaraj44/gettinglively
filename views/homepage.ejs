<!-- section form -->

<div class="uk-section uk-section-large uk-section-muted">
  <div class="uk-container">
    <h4
      class="uk-text-uppercase uk-text-center uk-margin-top-large tagline1"
      data-aos="fade-up"
    >
      Stay Up To Date
    </h4>
    <hr class="uk-divider-icon" data-aos="fade-down" />
    <div class="uk-container uk-flex uk-flex-center uk-margin-large">
      <form class="uk-width-1-2">
        <div class="uk-form-stacked">
          <div class="uk-margin-medium">
            <label class="uk-form-label" for="email"
              ><p
                class="uk-text-center text-xlarge tagline2"
                data-aos="fade-up"
              >
                Subscribe us for all the offers and updates
              </p></label
            >
            <div class="uk-form-control">
              <input
                required
                class="uk-input uk-form-large tagline3"
                type="text"
                id="email"
                name="email"
                placeholder="Email Address"
              />
            </div>
          </div>
          <div class="uk-margin-medium uk-text-center">
            <div class="uk-form-control" data-aos="fade-down">
              <input
                type="submit"
                class="uk-button uk-button-custom noSelect tagline4"
              />
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

