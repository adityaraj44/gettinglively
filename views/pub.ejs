      <% if(allEntries.length > 0) { %> <% allEntries.forEach((allEntry)=> { %>
      <div>
        <a href="/places/entries/entry/<%- allEntry._id %>" class="noSelect"
          ><div class="uk-card uk-card-hover uk-card-default">
            <div class="uk-card-media-top">
              <div class="uk-clearfix uk-position-absolute">
                <span
                  class="
                    uk-label
                    uk-float-left
                    uk-label-danger
                    uk-text-medium
                    uk-text-bold
                  "
                  ><%- allEntry.typeOfPlace %></span
                >
                <span
                  class="
                    uk-label
                    uk-float-left
                    uk-label-primary
                    uk-text-medium
                    uk-text-bold
                  "
                  ><%- allEntry.bookingStatus %></span
                >
              </div>
              <img src="<%- allEntry.cover %>" alt="<%- allEntry.cover %>" />
            </div>
            <div
              class="
                uk-card-footer
                uk-card-secondary
                uk-text-left
                uk-text-default
                uk-text-bold
              "
            >
              <%- allEntry.name %>
            </div>
          </div></a
        >
      </div>
      <% }) %> <% } else { %>
      <p class="uk-text-center uk-text-large uk-text-warning">No Entries</p>
      <% } %>
    </div>
  </div>
</div>

