<!-- slider section -->
<div class="uk-section-auto uk-section-black parallaxslider">
  <div class="uk-container">
    <div
      class="uk-position-relative uk-visible-toggle uk-light"
      tabindex="-1"
      uk-slideshow="animation: push"
    >
      <ul class="uk-slideshow-items">
        <li>
          <img src="/img/bars/bar1.jpg" alt="" uk-cover />
          <div class="uk-position-center uk-position-small uk-text-center">
            <h2 uk-slideshow-parallax="y: -50,0,0; opacity: 1,1,0">
              Permanently Insurmountable
            </h2>
            <p
              class="uk-text-large uk-text-capitalize"
              uk-slideshow-parallax="y: 50,0,0; opacity: 1,1,0"
            >
              when life gives you lemons grab tequila and salt
            </p>
          </div>
        </li>
        <li>
          <img src="/img/bars/bar2.jpg" alt="" uk-cover />
          <div class="uk-position-center uk-position-small uk-text-center">
            <h2 uk-slideshow-parallax="y: -50,0,0; opacity: 1,1,0">
              Impassable Golden
            </h2>
            <p
              class="uk-text-large uk-text-capitalize"
              uk-slideshow-parallax="y: 50,0,0; opacity: 1,1,0"
            >
              we all deserve an alocholiday
            </p>
          </div>
        </li>
        <li>
          <img src="/img/bars/bar3.jpg" alt="" uk-cover />
          <div class="uk-position-center uk-position-small uk-text-center">
            <h2 uk-slideshow-parallax="y: -50,0,0; opacity: 1,1,0">
              Black Subterminal
            </h2>
            <p
              class="uk-text-large uk-text-capitalize"
              uk-slideshow-parallax="y: 50,0,0; opacity: 1,1,0"
            >
              i followed my heart and it led me to the bar
            </p>
          </div>
        </li>
      </ul>

      <a
        class="uk-position-center-left uk-position-small uk-hidden-hover"
        href="#"
        uk-slidenav-previous
        uk-slideshow-item="previous"
      ></a>
      <a
        class="uk-position-center-right uk-position-small uk-hidden-hover"
        href="#"
        uk-slidenav-next
        uk-slideshow-item="next"
      ></a>
    </div>
  </div>
</div>

