<!-- form  -->

<div
  class="
    uk-section uk-section-muted uk-section-create-uk-section-large
    borderBottom
  "
>
  <div class="uk-container">
    <div
      class="
        uk-child-width-1-1
        uk-grid-small
        uk-grid-match
        uk-margin-large-top
        uk-margin-large-bottom
      "
      uk-grid
    >
      <div>
        <div
          class="
            uk-child-width-1-1
            uk-grid-small
            uk-grid-match
            uk-margin-large-top
            uk-margin-large-bottom
          "
          uk-grid
        >
          <!-- post creation -->
          <div>
            <div class="uk-card uk-card-custom uk-card-hover uk-card-default">
              <div class="uk-card-header">
                <h3 class="uk-card-title uk-text-center">Create New Entry</h3>
                <p
                  class="
                    uk-text-primary
                    uk-text-center
                    uk-padding-medium
                    uk-text-break
                  "
                >
                  New location creation
                </p>
              </div>
              <div class="uk-card-body">
                <form
                  action="/business/createentries"
                  method="POST"
                  enctype="multipart/form-data"
                >
                  <div class="uk-form-stacked">
                    <div class="uk-margin-small">
                      <div class="uk-form-control">
                        <input
                          required
                          type="text"
                          name="name"
                          id="name"
                          placeholder="Name of the place"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof name != 'undefined' ? name: '' %>"
                        />
                      </div>
                      <div class="uk-form-control uk-margin-small-top">
                        <label for="typeOfPlace" class="uk-text-meta"
                          >Type of place (restaurant,bar,club,pub or
                          venue)</label
                        >
                        <select
                          name="typeOfPlace"
                          id="typeOfPlace"
                          class="uk-select"
                          required
                        >
                          <option value="restaurant">Restaurant</option>
                          <option value="bar">Bar</option>
                          <option value="club">Club</option>
                          <option value="pub">Pub</option>
                          <option value="venue">Venue</option>
                        </select>
                      </div>
                      <div class="uk-form-control uk-margin-small-top">
                        <label for="bookingStatus" class="uk-text-meta"
                          >Booking Status</label
                        >
                        <select
                          name="bookingStatus"
                          id="bookingStatus"
                          class="uk-select"
                          required
                        >
                          <option value="Not taking bookings">
                            Not taking bookings
                          </option>
                          <option value="Taking bookings">
                            Taking bookings
                          </option>
                        </select>
                      </div>
                      <div class="uk-form-control">
                        <input
                          required
                          type="text"
                          name="typeOfVenue"
                          id="typeOfVenue"
                          placeholder="Type of Venue (use commas for multiple)"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof typeOfVenue != 'undefined' ? typeOfVenue: '' %>"
                        />
                      </div>
                      <div class="uk-form-control">
                        <input
                          required
                          type="text"
                          name="location"
                          id="search_input"
                          placeholder="Complete Address"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof location != 'undefined' ? location: '' %>"
                        />
                      </div>
                      <div class="uk-form-control">
                        <input
                          required
                          type="text"
                          name="city"
                          id="city"
                          placeholder="City"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof city != 'undefined' ? city: '' %>"
                        />
                      </div>
                      <div class="uk-form-control">
                        <input
                          required
                          type="text"
                          name="postcode"
                          id="addressEntry"
                          placeholder="Postcode"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof postcode != 'undefined' ? postcode: '' %>"
                        />
                      </div>
                      <!-- <div class="uk-form-control">
                        <input
                          required
                          type="number"
                          name="rating"
                          min="1"
                          max="5"
                          placeholder="Initial rating out of 5"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof rating != 'undefined' ? rating: '' %>"
                        />
                      </div> -->
                      <p
                        class="
                          uk-text-center
                          uk-text-medium
                          uk-text-primary
                          uk-text-bold
                        "
                      >
                        Hours Schedule
                      </p>
                      <hr />
                      <div class="uk-form-control uk-margin-small-top">
                        <label for="monday" class="uk-text-meta"
                          >Monday Opening Time</label
                        >
                        <input
                          type="time"
                          name="monopening"
                          placeholder="Opening"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof monopening != 'undefined' ? monopening: '' %>"
                        />
                        <label for="monday" class="uk-text-meta"
                          >Monday Closing Time</label
                        >
                        <input
                          type="time"
                          name="monclose"
                          placeholder="Closing"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof monclose != 'undefined' ? monclose: '' %>"
                        />
                      </div>
                      <!--  -->
                      <div class="uk-form-control uk-margin-small-top">
                        <label for="tuesday" class="uk-text-meta"
                          >Tuesday Opening Time</label
                        >
                        <input
                          type="time"
                          name="tueopening"
                          placeholder="Opening"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof tueopening != 'undefined' ? tueopening: '' %>"
                        />
                        <label for="monday" class="uk-text-meta"
                          >Tuesday Closing Time</label
                        >
                        <input
                          type="time"
                          name="tueclose"
                          placeholder="Closing"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof tueclose != 'undefined' ? tueclose: '' %>"
                        />
                      </div>
                      <!--  -->
                      <div class="uk-form-control uk-margin-small-top">
                        <label for="wed" class="uk-text-meta"
                          >Wednesday Opening Time</label
                        >
                        <input
                          type="time"
                          name="wedopening"
                          placeholder="Opening"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof wedopening != 'undefined' ? wedopening: '' %>"
                        />
                        <label for="monday" class="uk-text-meta"
                          >Wednesday Closing Time</label
                        >
                        <input
                          type="time"
                          name="wedclose"
                          placeholder="Closing"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof wedclose != 'undefined' ? wedclose: '' %>"
                        />
                      </div>
                      <div class="uk-form-control uk-margin-small-top">
                        <label for="thu" class="uk-text-meta"
                          >Thursday Opening Time</label
                        >
                        <input
                          type="time"
                          name="thuopening"
                          placeholder="Opening"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof thuopening != 'undefined' ? thuopening: '' %>"
                        />
                        <label for="monday" class="uk-text-meta"
                          >Thursday Closing Time</label
                        >
                        <input
                          type="time"
                          name="thuclose"
                          placeholder="Closing"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof thuclose != 'undefined' ? thuclose: '' %>"
                        />
                      </div>
                      <div class="uk-form-control uk-margin-small-top">
                        <label for="fri" class="uk-text-meta"
                          >Friday Opening Time</label
                        >
                        <input
                          type="time"
                          name="friopening"
                          placeholder="Opening"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof friopening != 'undefined' ? friopening: '' %>"
                        />
                        <label for="monday" class="uk-text-meta"
                          >Friday Closing Time</label
                        >
                        <input
                          type="time"
                          name="friclose"
                          placeholder="Closing"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof friclose != 'undefined' ? friclose: '' %>"
                        />
                      </div>
                      <div class="uk-form-control uk-margin-small-top">
                        <label for="sat" class="uk-text-meta"
                          >Saturday Opening Time</label
                        >
                        <input
                          type="time"
                          name="satopening"
                          placeholder="Opening"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof satopening != 'undefined' ? satopening: '' %>"
                        />
                        <label for="monday" class="uk-text-meta"
                          >Saturday Closing Time</label
                        >
                        <input
                          type="time"
                          name="satclose"
                          placeholder="Closing"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof satclose != 'undefined' ? satclose: '' %>"
                        />
                      </div>
                      <div class="uk-form-control uk-margin-small-top">
                        <label for="tuesday" class="uk-text-meta"
                          >Sunday Opening Time</label
                        >
                        <input
                          type="time"
                          name="sunopening"
                          placeholder="Opening"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof sunopening != 'undefined' ? sunopening: '' %>"
                        />
                        <label for="monday" class="uk-text-meta"
                          >Sunday Closing Time</label
                        >
                        <input
                          type="time"
                          name="sunclose"
                          placeholder="Closing"
                          id="rating"
                          class="uk-input uk-form-large noSelect"
                          value="<%= typeof sunclose != 'undefined' ? sunclose: '' %>"
                        />
                      </div>
                      <div class="uk-form-control uk-margin-small-top">
                        <label for="desc" class="uk-text-meta"
                          >Full Description of the place. Description should not
                          be less than 500 characters.</label
                        >
                        <textarea
                          required
                          name="desc"
                          id="desc"
                          class="uk-textarea"
                        >
<%- typeof desc != 'undefined' ? desc: '' %></textarea
                        >
                      </div>
                      <p
                        class="
                          uk-text-center
                          uk-text-medium
                          uk-text-primary
                          uk-text-bold
                        "
                      >
                        Upload files
                      </p>
                      <hr />
                      <div class="uk-form-control uk-margin-small-top">
                        <div uk-form-custom="target: true">
                          <label for="coverimg" class="uk-text-meta"
                            >Cover image of the entry</label
                          >
                          <input
                            type="file"
                            accept="image/png, image/jpeg"
                            required
                            name="cover"
                          />
                          <input
                            class="uk-input uk-form-width-large noSelect"
                            type="text"
                            value="<%= typeof
                        image != 'undefined'? image: '' %>"
                            placeholder="Select cover image for the entry"
                            disabled
                          />
                        </div>
                      </div>
                    </div>
                    <%- include('../partials/errors.ejs'); %>
                    <div class="uk-marign-medium uk-text-center">
                      <div class="uk-form-control">
                        <button
                          type="submit"
                          class="uk-button uk-button-custom noSelect"
                        >
                          Post
                        </button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
              <div class="uk-card-footer"></div>
            </div>
          </div>
        </div>
      </div>
      <!-- post creation -->
    </div>
  </div>
</div>
