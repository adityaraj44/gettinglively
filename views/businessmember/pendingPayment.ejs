<%- include('../partials/businessNavbar.ejs'); %>

<ul class="uk-breadcrumb uk-margin-large-left">
  <li>
    <a href="/business" class="uk-button uk-button-text noSelect">My Entries</a>
  </li>
  <li>
    <a href="/business/createentries" class="uk-button uk-button-text noSelect"
      >Create Entries</a
    >
  </li>
  <li>
    <a href="/business/reviewentries" class="uk-button uk-button-text noSelect"
      >Entries For Review</a
    >
  </li>
  <li>
    <a
      href="/business/entries/pendingpayment"
      class="uk-button uk-button-text noSelect"
      >Pending Payments</a
    >
  </li>
</ul>

<!-- body -->
<div
  class="
    uk-section uk-section-muted uk-section-statistics uk-section-large
    borderBottom
  "
>
  <div class="uk-container">
    <%- include('../partials/errors.ejs'); %>
    <h4 class="uk-text-uppercase uk-text-center uk-margin-top-large tagline1">
      Pending payment for entries
    </h4>
    <p class="uk-text-meta uk-text-center uk-text-medium">
      Your newly created entries are displayed here. Proceed to pay and make
      your entries public.
    </p>
    <hr class="uk-divider-icon" />
    <div
      class="
        uk-child-width-1-1
        uk-child-width-1-3@s
        uk-grid-small
        uk-margin-large-top
        uk-margin-large-bottom
      "
      uk-grid
    >
      <% if(pendingEntries.length > 0) { %> <%
      pendingEntries.forEach((pendingEntry)=> { %>
      <div>
        <div class="uk-card uk-card-hover uk-card-default">
          <div class="uk-card-media-top">
            <div class="uk-clearfix uk-position-absolute">
              <span
                class="
                  uk-label
                  uk-float-left
                  uk-label-danger
                  uk-text-medium
                  uk-text-bold
                "
                ><%- pendingEntry.typeOfPlace %></span
              >
              <span
                class="
                  uk-label
                  uk-float-left
                  uk-label-primary
                  uk-text-medium
                  uk-text-bold
                "
                ><%- pendingEntry.bookingStatus %></span
              >

              <!-- <span
                  class="
                    uk-label
                    uk-float-right
                    uk-label-success
                    uk-text-medium
                    uk-text-bold
                  "
                  ></span
                > -->
            </div>
            <img
              src="<%- pendingEntry.cover %>"
              alt="<%- pendingEntry.cover %>"
            />
          </div>
          <div
            class="
              uk-card-footer
              uk-card-secondary
              uk-text-left
              uk-text-default
              uk-text-bold
            "
          >
            <div class="uk-clearfix">
              <a
                href="/business/myentries/entry/<%- pendingEntry._id %>"
                class="noSelect uk-float-left"
                ><%- pendingEntry.name %></a
              >
              <a
                href="/business/entries/paymentpage/<%- pendingEntry._id %>"
                target="blank"
                class="
                  uk-button uk-button-custom uk-float-right uk-light
                  noSelect
                "
                >Pay</a
              >
            </div>
          </div>
        </div>
      </div>
      <% }) %> <% } else { %>
    </div>
    <p class="uk-text-center uk-text-large info-text uk-text-warning">
      No Pending Payments
    </p>
    <% } %>
  </div>
</div>
